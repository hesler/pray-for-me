%header.main-header
  =link_to admin_root_url, class: :logo do
    %span.logo-mini
      A
    %span.logo-lg
      Admin Panel
  %nav.navbar.navbar-static-top
    = link_to '#', class: 'sidebar-toggle', data: { toggle: 'offcanvas' }, role: :button do
      %span.sr-only
        Toggle navigation
    .navbar-header
      = link_to 'PrayForMe', admin_root_url, class: 'navbar-brand'
      %button.navbar-toggle.collapsed{ type: 'button', data: { toggle: 'collapse', target: '#navbar-collapse' } }
        %i.fa.fa-bars
    .navbar-custom-menu
      %ul.nav.navbar-nav
        %li.dropdown.user.user-menu
          = link_to '#', class: 'deropdown-toggle', data: { toggle: :dropdown }, aria: { expanded: :true } do
            = image_tag 'avatar.png', class: 'user-image', alt: 'Admin image'
            %span.hidden-xs= current_admin.email
          %ul.dropdown-menu
            %li.user-footer
              .pull-right
                = link_to 'Sign out', destroy_admin_session_path, method: :delete, class: 'btn btn-default btn-flat'
