%section.content-header
  .pull-right.buttons
    = link_to admin_admins_path, class: 'btn btn-default btn-sm' do
      Back
  %h1
    New admin

%section.content
  .col-md-6
    .box.box-info.box-primary
      .box-header.with-border
        %h3.box-title Admin Form
      =form_for admin, url: admin_admins_path, method: :post do |f|
        = render partial: 'form', locals: { f: f, admin: admin }
