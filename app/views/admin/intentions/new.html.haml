%section.content-header
  .pull-right.buttons
    = link_to admin_intentions_path, class: 'btn btn-default btn-sm' do
      Back
  %h1
    New intention

%section.content
  .col-md-6
    .box.box-info.box-primary
      .box-header.with-border
        %h3.box-title Intention Form
      =form_for intention, url: admin_intentions_path, method: :post do |f|
        = render partial: 'form', locals: { f: f, intention: intention }
